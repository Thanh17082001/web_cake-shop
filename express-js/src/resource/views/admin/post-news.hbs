    <h3 class="text-center text-warning my-4">Đăng tin tức </h3>
    <div class="container my-4 d-flex justify-content-center">
        <form class="w-50" method="post" action="./post-news">
            {{#if message}}
                <div class="fs-4 mt-4 alert alert-success d-flex align-items-center" role="alert">
                    {{message}}
                    <a href="/admin/show" class="nav-link active">Tất cả bài viết</a>
                </div>
            {{else}}
                <a href="/admin/news" class="btn btn-outline-info fs-4 mb-5 text-center">Tất cả bài viết</a>
            {{/if}}
            <div class="mb-3">
                <label  class="form-label">Tiêu đề bài viết</label>
                <input type="text" class="form-control" name="name" >
            </div>
            <div class="mb-3">
                <label  class="form-label">Link hình ảnh</label>
                <input type="text" class="form-control" name="img" >
            </div>
             <div class="mb-3">
                <label  class="form-label">Nội dung bài viết</label>
                <textarea name="description" id="" class="form-control" cols="30" rows="8"></textarea>
            </div>
            
            <button type="submit" class="btn btn-lg btn-primary px-5">Đăng</button>
        </form>
    </div>